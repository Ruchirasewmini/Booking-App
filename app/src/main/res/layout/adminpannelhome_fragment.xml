<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_adminpannel">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <Button
            android:id="@+id/adminviewsearchroutebutton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="View Search Routes Details"
            app:layout_constraintBottom_toTopOf="@+id/adminviewbustimetablebutton"
            app:layout_constraintEnd_toStartOf="@+id/adminviewbusdetailsbutton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:background="@drawable/bg_button"
            android:textColor="@color/textwhite"/>

        <Button
            android:id="@+id/adminviewbusdetailsbutton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="View Bus Detail"
            app:layout_constraintBaseline_toBaselineOf="@+id/adminviewsearchroutebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/adminviewsearchroutebutton"
            android:background="@drawable/bg_button"
            android:textColor="@color/textwhite"/>

        <Button
            android:id="@+id/adminviewbustimetablebutton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="View Bus Time Table Details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/adminviewbookingdetails"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminviewsearchroutebutton"
            android:background="@drawable/bg_button"
            android:textColor="@color/textwhite"/>

        <Button
            android:id="@+id/adminviewbookingdetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_button"
            android:text="View Booking Details"
            app:layout_constraintBaseline_toBaselineOf="@+id/adminviewbustimetablebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/adminviewbustimetablebutton"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="Admin Pannel"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textwhite"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>