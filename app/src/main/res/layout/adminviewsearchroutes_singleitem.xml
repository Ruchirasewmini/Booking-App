<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_adminpannel">

        <TextView
            android:id="@+id/admin_view_searchroute_Id"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="1dp"
            android:text="Location "
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_view_searchroute_location"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Destination"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_routenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_view_searchroute_destination"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Route Numbers"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_view_searchroute_routenumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Distance"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_ticketprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_view_searchroute_distance"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Ticket Price"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <TextView
            android:id="@+id/admin_view_searchroute_timeduration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_view_searchroute_ticketprice"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Time Duration"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/textwhite"/>

        <Button
            android:id="@+id/admin_view_searchroute_updatebutton"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@+id/admin_view_searchroute_timeduration"
            android:background="@android:color/holo_green_light"
            android:text="Update" />

        <Button
            android:id="@+id/admin_view_searchroute_deletebutton"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@+id/admin_view_searchroute_updatebutton"
            android:background="@android:color/holo_red_light"
            android:text="Delete" />


    </RelativeLayout>





</androidx.cardview.widget.CardView>